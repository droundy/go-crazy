#!/bin/sh

set -ev

make

rm -rf .testdir
mkdir .testdir
cd .testdir
cp ../example.go .

../go-crazy example.go

grep _dot_sub example-compiled.go

./example

cat > Makefile <<EOF
include \$(GOROOT)/src/Make.\$(GOARCH)

TARG=foo

GOFILES=\
	example-compiled.go\

include \$(GOROOT)/src/Make.cmd
EOF

make

./foo
