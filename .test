#!/bin/sh

set -ev

make

rm -rf .testdir
mkdir .testdir
cd .testdir

for gof in `ls ../testfiles | egrep '\.go$'`; do
    echo Testing $gof
    echo cp ../testfiles/$gof .
    cp ../testfiles/$gof .
    echo ../go-crazy $gof
    ../go-crazy $gof
    if test -f ../testfiles/$gof.sh; then
        echo bash ../testfiles/$gof.sh
        bash ../testfiles/$gof.sh
    fi
done

